.studio
  display grid
  grid-template-columns 30% auto
  background-color dark-bg
  margin-bottom 7em

  +max(small)
    display flex
    flex-direction column-reverse
    margin-bottom 0

  +max(small)
    flex-direction column-reverse
    font-size 19px
    background-color transparent

.studio-image
  width 100%

.studio-content
  padding 0 13vw
  height 100%
  position relative

  +max(small)
    height auto
    margin-bottom 2.7em
    background-color dark-bg
    padding 1em 8vw 2.5em

.studio-content
  display flex
  flex-direction column
  justify-content center

  h3
    font-size 1.563rem
    line-height 1.5
    color #eaeaea
    font-weight normal

    +max(small)
      font-size 19px

  p
    font-size 1rem
    line-height 1.75
    color #d1d1d1

.studio-cta
  right site-margin
  background-color blue
  position absolute

  &.anim
    transform translate(0, 60%)

  &.fade
    transform translate(0, 50%)

  +max(small)
    padding 1em
    display flex
    justify-content center
    align-items flex-end

    &:hover
      width calc(100% - 20vw)

    svg
      margin 0
      margin-left 1em
