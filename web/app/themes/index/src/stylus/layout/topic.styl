.topic
  padding 6em site-margin
  text-align center
  display flex
  flex-direction column
  align-items center

  +max(small)
    padding 2em mobile-site-margin

  &.dark
    background-color dark-bg
    padding-bottom 0

.topic-title
  font-family secondary-font
  font-size 2.188rem
  letter-spacing 0.3px
  color #333333
  margin-bottom 1em
  font-weight normal

  .dark &
    color white

.topic-paragraph
  margin 0 site-margin 2em
  font-size 1rem
  line-height 1.5
  letter-spacing 1px
  color #717171
  text-align center

  &.fade
    transition-delay 0.3s

  +max(small)
    text-align left
    margin 0

  .dark &
    color #bababa

.topic-subtitle
  font-family secondary-font
  font-size 1.625rem
  font-weight 300
  letter-spacing 0.5px
  color dark-text
  align-self flex-start
