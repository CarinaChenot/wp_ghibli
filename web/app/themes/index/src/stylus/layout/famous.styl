.famous-movies
  padding 5em site-margin 7.2em

  .movies-grid
    display flex
    flex-wrap wrap

  .movie-item
    display flex
    color white
    width 50%
    position relative
    z-index 0
    box-sizing border-box
    background-repeat no-repeat
    background-size cover
    background-position center

    +max(small)
      width 100%

    &:first-child
      width 100%
      min-height 480px

      .movie-content
        width 39%

        +max(small)
          width initial

  .movie-content
    background-color rgba(green, 0.87)
    width 100%
    padding 5em
    position relative

    +max(small)
      padding 3em

  .movie-item-title
    font-size 35px
    font-weight bold
    line-height 1.4
    letter-spacing 0.5px
    margin 0 0 1em 0

  .movie-item-text
    font-size 20px
    line-height 1.5
    letter-spacing 1px

  .movie-cta
    position absolute
    right 0
    bottom 0
    background-color light-green
    display inline-block

    > svg
      width 20px
      fill white
      margin 1.2em 2.2em
