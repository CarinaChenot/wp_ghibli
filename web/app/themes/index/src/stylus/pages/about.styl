.about-bio
  background-color dark-bg
  padding-bottom 5em

  +max(small)
    padding-bottom 2.5em

.about-bio-image
  position relative

  &.fade
    transition-delay 0.3s

  img
    width calc(100% - 10vw)

  &::after
    content ''
    position absolute
    top 0
    height 25%
    width 100%
    background-color white

.about-bio-wrapper
  display flex
  flex-wrap wrap
  padding 3em site-margin

  +max(small)
    flex-direction column
    align-items center
    text-align center
    padding 1.5em mobile-site-margin

.about-bio-item
  display flex
  flex-direction column
  margin-right 15%
  font-size 1.125rem

  +max(small)
    margin 0
    align-items center

    &:nth-child(2)
      .about-bio-title
        margin-top 1.4em

  ul
    display flex
    flex-direction column
    list-style-type none
    margin 0
    padding 0

  li
    color white
    line-height 1.5
    letter-spacing 0.2px

  a
    color green
    text-decoration none
    font-weight bold
    line-height 2.45
    letter-spacing 0.2px
    position relative

    &:hover::after
      transform scaleX(1)

    &::after
      content ''
      position absolute
      background-color green
      height 2px
      width 100%
      transform scaleX(0)
      transition transform 0.3s ease-in-out
      left 0
      bottom -3px
      transform-origin left

.about-bio-title
  font-size 1.125rem
  font-weight bold
  letter-spacing 0.2px
  color #585858
  text-transform uppercase

  .section-subtitle
    font-family secondary-font
    font-size 30px
    font-weight 300
    letter-spacing 0.5px
    color dark-text

/*** Founders ***/
.topic.origins
  padding-bottom 0

  .topic-subtitle
    margin 0
    justify-self flex-start

    +max(small)
      margin-bottom 1em


.founders
  margin-top 6em
  display grid
  width 100%
  grid-template-rows 13vh 74vh 13vh
  grid-template-columns 47% 6% 47%
  position relative

  +max(small)
    margin-top 3em
    display flex
    flex-direction column

  &::after
    content ''
    position absolute
    width auto
    height 13vh
    background-color dark-bg
    bottom 0
    left -(site-margin)
    right -(site-margin)
    z-index -1

  .founder
    position relative
    overflow hidden

    &:hover
      .founder-legend
        opacity 1

      .founder-image
        transform translateZ(10px)

    &:first-of-type
      grid-row 2 / 4
      grid-column 1 / 3

    &:last-child
      grid-row 1 / 3
      grid-column 2 / 4

.founder-image
  transform translateZ(0)
  transition transform .75s cubic-bezier(.23,1,.32,1)
  width 100%

.founder-legend
  display flex
  flex-direction column
  justify-content flex-end
  align-items flex-start
  position absolute
  top 0
  left 0
  height 100%
  width 100%
  padding 5em 3em
  opacity 0
  background-color rgba(#1a1a1a, 0.77)
  transition opacity .75s cubic-bezier(.23,1,.32,1)

.stroke
  height 10px
  width 36px
  margin 0
  background-color green
  border 0

.founder-name
  font-family secondary-font
  font-size 35px
  font-weight 300
  letter-spacing 0.2px
  color #f5f5f5
  margin 0.5em 0

.founder-role
  font-size 16px
  font-weight bold
  letter-spacing 0.2px
  color #b5b5b5

.yt-wrapper
  width 100%

  iframe
    width 100%
