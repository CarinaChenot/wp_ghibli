.about-bio
  background-color dark-bg
  padding-bottom 5em

.about-bio-image
  position relative

  img
    width calc(100% - 10vw)

  &::after
    content ''
    position absolute
    top 0
    height 25%
    width 100%
    background-color white

.about-bio-wrapper
  display flex
  padding 3em site-margin

.about-bio-item
  display flex
  flex-direction column
  margin-right 15%

  ul
    display flex
    flex-direction column
    list-style-type none
    margin 0
    padding 0

  li
    color white
    font-size 20px
    line-height 1.5
    letter-spacing 0.2px

  a
    color green
    text-decoration none
    font-size 20px
    font-weight bold
    line-height 2.45
    letter-spacing 0.2px
    position relative

    &:hover::after
      transform scaleX(1)

    &::after
      content ''
      position absolute
      background-color green
      height 2px
      width 100%
      transform scaleX(0)
      transition transform 0.3s ease-in-out
      left 0
      bottom -3px
      transform-origin left

.about-bio-title
  font-size 20px
  font-weight bold
  letter-spacing 0.2px
  color #585858
  text-transform uppercase

  .section-subtitle
    font-family secondary-font
    font-size 30px
    font-weight 300
    letter-spacing 0.5px
    color dark-text

/*** Founders ***/
.topic.origins
  padding-bottom 0

  .topic-subtitle
    margin 0
    justify-self flex-start

.founders
  margin-top 6em
  display grid
  width 100%
  grid-template-rows 13vh 74vh 13vh
  grid-template-columns 47% 6% 47%
  position relative

  &::after
    content ''
    position absolute
    width auto
    height 13vh
    background-color dark-bg
    bottom 0
    left -(site-margin)
    right -(site-margin)
    z-index -1

  .founder
    position relative

    &:hover .founder-legend
      display flex

    &:first-of-type
      grid-row 2 / 4
      grid-column 1 / 3

    &:last-child
      grid-row 1 / 3
      grid-column 2 / 4

.fake-pic
  background-color red
  width 100%
  border solid 1px black
  height 100%

.founder-legend
  display none
  flex-direction column
  justify-content flex-end
  align-items flex-start
  position absolute
  top 0
  left 0
  height 100%
  width 100%
  padding 5em 3em
  background-color rgba(#1a1a1a, 0.77)

.stroke
  height 10px
  width 36px
  margin 0
  background-color green
  border 0

.founder-name
  font-family secondary-font
  font-size 35px
  font-weight 300
  letter-spacing 0.2px
  color #f5f5f5
  margin 0.5em 0

.founder-role
  font-size 16px
  font-weight bold
  letter-spacing 0.2px
  color #b5b5b5
