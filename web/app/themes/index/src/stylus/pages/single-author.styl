.single-author
  display grid
  grid-template-columns repeat(6, 1fr)

  img
    width 100%

.author-bio
  grid-column 1/4
  background-color dark-bg
  padding 3em site-margin
  display flex
  flex-direction column
  justify-content center
  position relative

  svg
    position absolute
    width 33px
    fill white
    transform rotate(180deg)
    top 5vw

  .stroke
    margin 2em 0

.author-name
  margin 0
  font-family secondary-font
  color #e9e9e9
  font-weight 300
  font-size 75px
  letter-spacing 0.5px

.author-text
  line-height 30px
  letter-spacing 1px
  font-size 20px
  color #bababa

.author-photo
  grid-column 4/7

.author-photo-wrapper
  position relative
  grid-column span 2

  &:hover
    .author-photo-text
      display flex

  .author-photo-text
    display none
    position absolute
    top 0
    height 100%
    width 100%
    background-color rgba(28, 27, 27, 0.8)
    padding 4em
    flex-direction column
    justify-content flex-end

  .author-name
    color #f5f5f5
    font-size 35px
    margin-bottom 0.5em

  .author-job
    font-weight bold
    letter-spacing 0.2px
    color #b5b5b5
