.movie-cta
  background light-green

.movie-bio
  display flex
  flex-direction column
  align-items center
  margin 5em site-margin 2em

  .movie-excerpt
    text-align center
    max-width 70%

.movie-poster
  max-width 30vw

.summary
  background-color beige
  padding 0 site-margin 3em

.summary-title
  font-size 35px
  font-weight bold

  line-height 1.4
  letter-spacing 0.2px
  color bold-text
  margin 0.2em 0

.summary-underline
  background-color green
  height 10px
  width 36px
  border 0
  margin 0

.summary-text
  font-size 1rem
  line-height 1.65
  letter-spacing 1px
  color p-text

  p
    margin 2em 0

.movie-author
  display flex
  align-items center
  margin-top 4em

.movie-author-picture
  border-radius 100%
  width 111px
  height 111px
  background-size cover
  margin-right 3em

.movie-author-text
  display flex
  flex-direction column

.movie-author-name
  font-family secondary-font
  font-size 28px
  font-weight bold
  letter-spacing 0.2px
  color green
  margin-bottom 0.5em

.movie-author-role
  font-size 22px
  font-style italic
  letter-spacing 0.2px
  color #363636

.gallery
  padding 5em site-margin
  position relative
  background-color beige
  z-index 0

  &::before
    background-color white
    content ''
    position absolute
    left 0
    top 0
    bottom 0
    width 100%
    height 85%
    margin auto
    z-index -1

.gallery-picture
  width 100%

.people
  padding 3em site-margin 5em
  background-color beige

  +max(small)
    padding 1.5em mobile-site-margin 2.5em

.people-grid
  margin 4em 0
  display grid
  grid-template-columns repeat(3, 1fr)
  grid-gap 4em 1em

  +max(small)
    grid-template-columns repeat(2, 1fr)
    grid-gap 2em 1em
    margin 2em 0

.people-item
  display flex
  flex-direction column

.people-role
  font-size 20px
  font-weight bold
  margin 1em 0
  letter-spacing 0.2px
  text-align left
  color bold-text

.people-name
  font-family secondary-font
  font-size 26px
  font-weight 300
  line-height 1.27
  letter-spacing 0.9px
  color p-text

.video-container
  height 300px
  width 100%
  background-color red
  margin-bottom 3em

