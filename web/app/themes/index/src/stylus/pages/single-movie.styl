.movie-title
  font-family secondary-font
  font-size 55px
  letter-spacing 0.4px
  color greenish
  margin 0 0 0.5em 0

.movie-year
  font-size: 30px;
  font-weight: bold;
  color: #2e2e2e;

.movie-excerpt
  font-size: 20px;
  line-height: 1.5;
  letter-spacing: 1px;
  max-width 50%
  color: #626262;

.movie-image
  margin-top 4em
  margin-bottom 7em
  position relative

.movie-cta
  background cta-color

.movie-bio
  display flex
  flex-direction column
  align-items center
  margin 5em site-margin 2em

  .movie-excerpt
    text-align center
    max-width 70%
.movie-type
  font-size: 20px;
  font-style: italic;
  line-height: 2.45;
  letter-spacing: 0.3px;
  text-align: center;
  color: #9a9a9a;

.movie-poster-wrapper
  position relative
  text-align center
  margin 4em 0

  &::after
    content ''
    position absolute
    top 50%
    left 0
    width 100%
    height 100%
    background dark-white
    z-index -1

.movie-poster
  max-width 30vw

.summary
  background-color dark-white
  padding 0 site-margin 3em

.summary-title
  font-size: 35px;
  font-weight: bold;

  line-height: 1.4;
  letter-spacing: 0.2px;
  color: #525252;
  margin 0.2em 0

.summary-underline
  background-color greenish
  height 10px
  width 36px
  border 0
  margin 0

.summary-text
  font-size: 20px;
  line-height: 1.65;
  letter-spacing: 1px;
  color: #626262;

  p
    margin 2em 0

.movie-author
  display flex
  align-items center
  margin-top 4em

.movie-author-picture
  border-radius 100%
  width 111px
  height 111px
  background-size cover
  margin-right 3em

.movie-author-text
  display flex
  flex-direction column

.movie-author-name
  font-family secondary-font
  font-size: 28px;
  font-weight: bold;
  letter-spacing: 0.2px;
  color: #44a95b;
  margin-bottom 0.5em

.movie-author-role
  font-size: 22px;
  font-style: italic;
  letter-spacing: 0.2px;
  color: #363636;

.gallery
  padding 5em site-margin
  position relative
  background-color dark-white
  z-index 0

  &::before
    background-color white
    content ''
    position absolute
    left 0
    top 0
    bottom 0
    width 100%
    height 85%
    margin auto
    z-index -1

.gallery-picture
  width 100%

.people
  padding 3em site-margin 5em
  background-color dark-white

.movie-type
  font-size: 20px;
  font-style: italic;
  line-height: 2.45;
  letter-spacing: 0.3px;
  text-align: center;
  color: #9a9a9a;

.movie-poster-wrapper
  position relative

.people-grid
  margin 4em -1em 0
  display flex
  flex-wrap wrap
  justify-content space-between

.people-item
  display flex
  flex-direction column
  width 33%
  padding 0 1em
  margin-bottom 4em

.people-role
  font-size: 20px;
  font-weight: bold;
  line-height: 2.45;
  letter-spacing: 0.2px;
  text-align: left;
  color: #525252;

.people-name
  font-family secondary-font
  font-size: 26px;
  font-weight: 300;
  line-height: 1.27;
  letter-spacing: 0.9px;
  color: #626262;

.video-container
  height 300px
  width 100%
  background-color red
  margin-bottom 3em

