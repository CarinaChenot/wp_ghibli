.movie-title
  font-family secondary-font
  font-size 55px
  letter-spacing 0.4px
  color green
  margin 0 0 0.5em 0

.movie-year
  font-size 30px
  font-weight bold
  color dark-text

.movie-category
  font-size 20px
  font-style italic
  line-height 2.45
  letter-spacing 0.3px
  text-align center
  color #9a9a9a

.movie-excerpt
  font-size 20px
  line-height 1.5
  letter-spacing 1px
  max-width 50%
  color p-text

.movie-poster-wrapper
  position relative
  text-align center
  margin 4em 0

  &::after
    content ''
    position absolute
    top 50%
    left 0
    width 100%
    height 100%
    background beige
    z-index -1

.movie-image-wrapper
  margin-top 4em
  margin-bottom 7em
  position relative

.movie-cta
  background light-green

