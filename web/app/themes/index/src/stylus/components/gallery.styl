.universe-gallery,
.museum-gallery
  display grid
  height 195vh
  width "calc(100% + 2 * %s)" % site-margin
  margin-top 6em
  grid-auto-flow column

  .gallery-image
    background-size cover
    background-position center

.universe-gallery
  grid-template-columns 60% 40%
  grid-template-rows: repeat(3, 15%) 25% 30%;

  .gallery-image
    &:nth-child(-n+3)
      grid-column 1 / 3

    &:last-child
      grid-column 2
      grid-row 4 / 6

.museum-gallery
  grid-template-columns repeat(2, 50%)
  grid-template-rows repeat(3, 1fr)

  .gallery-image
    &:last-child
      grid-column 1 / 3
      grid-row 3

    &:nth-child(3)
      grid-row 1 / 3
