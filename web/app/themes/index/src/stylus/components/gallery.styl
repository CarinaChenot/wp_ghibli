.universe-gallery
  display grid
  grid-template-columns 60% 40%
  grid-template-rows: repeat(3, 16%) 20% 30%;
  width 100%
  height 200vh

  .gallery-image
    width 100%
    background-size cover
    background-position center

    &:nth-child(-n+3)
      grid-column 1 / 3

    &:nth-child(n+4)
      grid-column 1

    &:nth-child(4)
      grid-row 4

    &:nth-child(5)
      grid-row 5

    &:last-child
      grid-column 2
      grid-row 4 / 6
