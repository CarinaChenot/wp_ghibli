.section-stroke
  background-color green
  height 7px
  width 68px
  border 0

  &.anim
    @extends $fadeAnim

  &.fade
    opacity 1
    transform translateY(0px)

.section-title
  font-weight 900
  font-size 1.375rem
  text-transform uppercase
  color dark-text
  text-align center
  margin-bottom 3em

  &.anim
    @extends $fadeAnim

  &.fade
    opacity 1
    transform translateY(0px)

  +max(small)
    margin-bottom 1.5em

  +min(small)
    .recent-movies &
      margin-bottom 0

.movie-item-title,
.movie-title
  font-family secondary-font
