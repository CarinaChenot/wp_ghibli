.search-container
  position relative
  z-index 0
  margin-top -2em

  &::before
    content ''
    position absolute
    left -(site-margin)
    right -(site-margin)
    width auto
    background-color dark-bg
    height 50%
    top 0
    z-index -1

.search
  background white
  margin 0 site-margin
  display flex
  position relative
  z-index 0

  .search-input
    border 0
    border-bottom solid 1px #f1f1f1
    align-self center
    padding 1em 0 0.5em
    margin 0 4em 0 2em
    width 100%
    font-size 20px
    letter-spacing 0.3px
    color #bababa

    &::placeholder
      font-style italic
      font-weight 300
      color #bababa

  .dropdown
    position relative
    font-size 20px
    font-weight bold
    letter-spacing 0.3px
    min-width 20%
    text-align center
    padding 2em 0

    &:hover
      .dropdown-content
        transform scaleY(1)

  .dropdown-text
    width 100%
    border-right solid 1px #8c8c8c

  .dropdown-content
    position absolute
    top 100%
    left 0
    right 0
    transform scaleY(0)
    transform-origin top
    transition transform 0.2s ease-in-out

  .dropdown-item
    padding 1em
    background-color white


    &:not(:last-child)
      border-bottom solid 1px #f1f1f1

    label
      cursor pointer
      font-size 20px
      font-weight bold
      letter-spacing 0.3px
      color #3d3d3d
      margin-left 0.5em


