.menu
  margin 1.8em 0
  display flex
  justify-content center
  color menu-color
  font-size 1rem
  text-transform uppercase

  .menu-item
    color inherit
    text-decoration none
    padding 0 2em

    &:not(:last-child)
      border-right solid 1px #cbcbcb

    &.current_page_item,
    &:hover
      font-weight 900
