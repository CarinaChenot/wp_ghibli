.menu
  margin 1.8em 0
  display flex
  justify-content center
  flex-wrap wrap
  color menu-color
  font-size 0.8rem
  text-transform uppercase

  +max(small)
    .footer &
      flex-direction column
      align-items center

  .footer &
    color bold-text

    +max(small)
      margin 1em

  .menu-item
    color inherit
    text-decoration none
    padding 0 2em

    .footer &
      padding 0 2.5em
      letter-spacing 1.1px

      +max(small)
        padding 0.3em

    .main-header &
      +max(small)
        padding 0 0.8em

      &:not(:last-child)
        border-right solid 1px #cbcbcb

      +min(small)
        &.current_page_item,
        &:hover
          font-weight 900
          padding 0 1.9em

.main-header
  position relative
