{% set containerClass = 'archive-shop' %}
{% extends "base.twig" %}

{% block content %}

<section class="famous-articles">
	<hr class="section-stroke">
	<h2 class="section-title">Articles populaires</h2>
	<div class="articles-grid">
		{% for i in 0..4 %}
		{# TODO: Add "has-promo" class if has promo category#}
		<article class="article has-promo">
			<img class="article-image" src="{{ theme.link }}/dist/img/miyasaki.jpeg" alt="">
			<div class="article-description">
				<span class="article-type">T-shirt</span>
				<span class="article-name">Studio Ghibli - Totoro</span>
				<span class="article-price">14,99â‚¬</span>
			</div>
		</article>
		{% endfor %}
	</div>
</section>

<section class="shop">
	<hr class="section-stroke">
	<h2 class="section-title">Boutique</h2>
	<div class="articles-grid">
        {% for product in products %}
            {% include './includes/product_card.twig' %}
        {% endfor %}
	</div>
</section>

{% include './includes/pagination.twig' %}

{% endblock %}
