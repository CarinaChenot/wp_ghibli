{% extends "base.twig" %}

{% block content %}
	<section class="hero" style="background-image: url('{{ post.thumbnail.src }}')">
		<img class="hero-logo" src="{{ TimberImage(post.hero_logo) }}">
		<a class="hero-cta" href="{{ theme.uri }}/a-propos">Découvrir l'univers</a>
	</section>

	<section class="quote">
		{% include '/dist/img/quote.svg.twig' %}
		<p class="quote-text">
			{{ post.quote }}
		</p>
		<span class="quote-author">{{ post.quote_author }}</span>
	</section>

	{% include './includes/famous_movies.twig' %}

	{% include './includes/recent_movies.twig' %}

	<section class="studio">
		<img class="studio-image" src="{{ TimberImage(post.studio_image) }}">
		<div class="studio-content">
			{{ post.content }}
			<a href="{{ page_about.link }}" class="btn-scale studio-cta">
				<span class="studio-cta-text">À propos de nous</span>
					{% include '/dist/img/right-arrow.svg.twig' %}
			</a>
		</div>
	</section>

{% endblock %}
