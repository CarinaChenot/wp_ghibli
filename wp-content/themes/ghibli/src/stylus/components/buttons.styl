.hero-cta
  border solid 2px white
  background transparent
  color white
  text-decoration none
  font-weight bold
  letter-spacing 4px
  text-transform uppercase
  padding 1em 3em
  margin 6em 0 1em
  position relative
  z-index 1
  transition color 0.3s ease-in-out

  &::after
    content ''
    background white
    position absolute
    width 100%
    height 100%
    bottom 0
    left 0
    z-index -1
    transform scaleY(0)
    transform-origin bottom
    transition transform 0.3s ease-in-out

  &:hover
    color black

    &::after
      transform scaleY(1)


.btn-scale
  @extends $btnText
  position absolute
  display flex
  justify-content flex-end
  align-items center
  bottom 0
  width 100px
  transform translateY(50%)
  transition width 0.3s ease-in-out
  overflow hidden

  +max(small)
    width calc(100% - 20vw)

  &:hover
    width 593px

  > svg
    margin 1.5em 2.5em
    fill white
    width 20px

  > span
    position absolute
    white-space nowrap
    right 108px

    +max(small)
      position static

  +max(small)
    letter-spacing 1px
    font-weight normal
    font-size 15px

