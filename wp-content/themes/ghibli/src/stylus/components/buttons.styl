.hero-cta
  border solid 2px white
  background transparent
  color white
  text-decoration none
  font-weight bold
  letter-spacing 4px
  text-transform uppercase
  padding 1em 3em
  margin 6em 0 1em
  position relative
  z-index 1
  transition color 0.3s ease-in-out

  &::after
    content ''
    background white
    position absolute
    width 100%
    height 100%
    bottom 0
    left 0
    z-index -1
    transform scaleY(0)
    transform-origin bottom
    transition transform 0.3s ease-in-out

  &:hover
    color black

    &::after
      transform scaleY(1)
