.main-header .menu
  display flex
  justify-content center
  color menu-color
  font-size 1rem
  text-transform uppercase
  text-align center

  ul
    margin 0
    padding 0
    display flex

  a
    color inherit
    text-decoration none

  .page_item
    list-style-type none
    padding 1.7em 0

    &:not(:last-child) a
      border-right solid 1px #cbcbcb

    &.current_page_item
      font-weight 900

    > a
      display block
      padding 0 2em
      position relative


